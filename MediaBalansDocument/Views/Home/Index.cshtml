@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Product>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between flex-wrap">
                        <h3>Urun Liste</h3>
                        <a asp-controller="Home" asp-action="Create" class="btn btn-success">Urun Ekle</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Urun Adi</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>
                                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Guncelle</a>
                                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>